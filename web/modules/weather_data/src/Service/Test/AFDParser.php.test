            ],
            [
                "type" => "header",
                "content" => "OKX WATCHES/WARNINGS/ADVISORIES",
                "postHeader" => null
            ],
            [
                "type" => "text",
                "content" => "CT...None."
            ],
            [
                "type" => "text",
                "content" => "NY...None."
            ],
            [
                "type" => "text",
                "content" => "NJ...None."
            ],
            [
                "type" => "text",
                "content" => "MARINE...Small Craft Advisory until 11 PM EDT this evening for ANZ350-"
            ],
            [
                "type" => "text",
                "content" => "                353-355."
            ],
            [
                "type" => "text",
                "content" => "        SYNOPSIS...JT/DW"
            ],
            [
                "type" => "text",
                "content" => "        NEAR TERM...DS/DW"
            ],
            [
                "type" => "text",
                "content" => "        SHORT TERM...DW"
            ],
            [
                "type" => "text",
                "content" => "        LONG TERM...JT"
            ],
            [
                "type" => "text",
                "content" => "        MARINE...JT/DW "
