<section
  class="usa-banner bg-accent-cool-lighter beta-banner"
  aria-label="This is a beta website."
>
  <div>
    <header
      class="bg-gold-10v border-left-1 border-gold-20v"
    >
      <div class="usa-banner__inner flex-row flex-align-start padding-y-1">
        <div class="grid-col flex-auto margin-right-1">
          <svg
            class="usa-icon height-3 width-3"
            aria-hidden="true"
            focusable="false"
            role="img"
          >
            <use
              xlink:href="/{{ directory }}/assets/images/uswds/sprite.svg#info"
            ></use>
          </svg>
        </div>
        <div class="grid-col">
          <div class="font-sans-xs line-height-sans-4">
            {{ content }}
          </div>
        </div>
      </div>
    </header>
  </div>
</section>
